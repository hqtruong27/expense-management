{
  "AllowedHosts": "https://localhost:5500,http://localhost:4200",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.Async",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Debug"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "ApplicationName": "Expense Management"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "outputTemplate": "[{Timestamp:dd-MM-yyyy HH:mm:ss.fff}] [{Level:u3}] <c:[%COMPUTERNAME%]> [{SourceContext}] {Message:lj}{Exception}{NewLine}"
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "Logs/log_.txt",
                "outputTemplate": "[{Timestamp:dd-MM-yyyy HH:mm:ss.fff}] [{Level:u3}] <c:[%COMPUTERNAME%]> [{SourceContext}] {Message:lj}{Exception}{NewLine}",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 7,
                "shared": true,
                "rollOnFileSizeLimit": true
              }
            }
          ]
        }
      }
    ]
  }
}
